root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{*.bash,*.sh}]
indent_size = 4

[*.go]
indent_style = tab

[*.java]
indent_size = 4

[*.xml]
indent_size = 4

[*.{yaml,yml}]
indent_size = 2

[Makefile*]
indent_style = tab
